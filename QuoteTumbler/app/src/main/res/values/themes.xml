<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuoteTumbler" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#f9fafc</item>
        <item name="colorPrimaryVariant">#e3e4e6</item>
        <item name="colorOnPrimary">#f7d0cb</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#313131</item>
        <item name="colorSecondaryVariant">#e3e4e6</item>
        <item name="colorOnSecondary">#f6d9d5</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.QuoteTumbler.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">16dp</item>
    </style>

    <style name="Theme.QuoteTumbler.AppWidgetContainer" parent="Theme.QuoteTumbler.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">1dp</item>
    </style>
</resources>